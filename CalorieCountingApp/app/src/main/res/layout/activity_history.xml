<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last 8 Meals Today"
        android:textSize="30sp"
        android:padding="10sp"
        android:textColor="#00008B"
        android:layout_marginTop="0sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/meal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/title"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal1"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal2"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal3"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal4"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal5"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal6"
        android:gravity="center"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/meal8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/meal7"
        android:gravity="center"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/backToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:layout_below="@id/meal8"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:padding="15sp"
        android:layout_marginTop="5sp"
        />

</RelativeLayout>